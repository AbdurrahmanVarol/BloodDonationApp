@model RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@if (TempData["Register"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["Register"]
    </div>
}
<h1 class="text-center text-dark-emphasis mb-4">Kayıt Ol</h1>
<div class="p-2 alert-danger" asp-validation-summary="ModelOnly"></div>
<form asp-action="register" asp-controller="">
    <div class="form-group">
        <label class="text-dark-emphasis" asp-for="FirstName">Ad:</label>
        <input class="form-control" asp-for="FirstName" placeholder="Adınızı girin" />
    </div>
    <br />
    <div class="form-group">
        <label class="text-dark-emphasis" asp-for="LastName">Soyad:</label>
        <input class="form-control" asp-for="LastName" placeholder="Soyadınızı girin" />
    </div>
    <br />
    <div class="form-group">
        <label class="text-dark-emphasis" asp-for="Email">E-posta:</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="E-postanızı girin" />
    </div>
    <br />
    @await Component.InvokeAsync("BloodGroup")

    @await Component.InvokeAsync("Cities")

    @await Component.InvokeAsync("Genders")
    <div class="form-group">
        <label class="text-dark-emphasis" asp-for="UserName">Kullanıcı Adı:</label>
        <input class="form-control" asp-for="UserName" placeholder="Kullanıcı adınızı girin" />
    </div>
    <br />
    <div class="form-group">
        <label class="text-dark-emphasis" asp-for="Password">Şifre</label>
        <input class="form-control" asp-for="Password" type="password" placeholder="Şifrenizi girin" />
    </div>
    <br />
    <div class="form-group">
        <label class="text-dark-emphasis" asp-for="PasswordConfirm">Şifre Tekrarı</label>
        <input class="form-control" asp-for="PasswordConfirm" type="password" placeholder="Şifrenizi tekrar girin" />
    </div>
    <br />
    <div class="text-right">
        <button style="float: right;" type="submit" class="btn btn-success">Kayıt Ol</button>
    </div>
</form>
<br />
<br />
<div class="links">
    <strong class="text-dark-emphasis">Hesabınız var mı?</strong><a href="login"><strong>Giriş yap</strong></a>
</div>

