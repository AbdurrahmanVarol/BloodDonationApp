@model IEnumerable<HospitalDisplayResponse>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center" role="alert">
        @TempData["Message"]
    </div>
}
<ol class="list-group list-group-numbered">
    @foreach(var hospital in Model)
    {
        <li class="list-group-item d-flex justify-content-between">
            <span>
                @hospital.Name
            </span>
            <span class="btn-group">
                <a asp-action="EmployeeManagement" asp-controller="hospital" asp-route-hospitalId="@hospital.Id" class="btn btn-outline-dark">Personel Ekle/Çıkar</a>
                <a asp-action="updateHospital" asp-controller="hospital" asp-route-id="@hospital.Id" class="btn btn-outline-dark">Düzenle</a>
                <a asp-action="deleteHospital" asp-controller="hospital" asp-route-id="@hospital.Id" class="btn btn-outline-dark">Sil</a>               
            </span>
        </li>
    }
</ol>

