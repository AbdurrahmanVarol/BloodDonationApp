@model IEnumerable<RequestDisplayResponse>
@{
    ViewData["Title"] = "Home Page";
}



@if (ViewBag.IsAuthenticated)
{
    <div class="text-center mb-3">
        <h1 class="display-4">Hoşgeldin @ViewBag.UserName</h1>
    </div>
    <h1>Talepler</h1>
}
else
{
    <h1>Tüm talepler</h1>
}

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <td>Tür</td>
            <td>Miktar</td>
            <td>Hastane Adı</td>
            <td>Şehir</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var request in Model)
        {
            <tr>
                <td>@request.BloodGroup</td>
                <td>@request.Quantity</td>
                <td>@request.Hospital</td>
                <td>@request.City</td>
            </tr>
        }
    </tbody>
</table>
